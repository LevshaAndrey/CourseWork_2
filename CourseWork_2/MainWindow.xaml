<Window x:Class="CourseWork_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="320" Width="480">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Кнопка для открытия страницы водителя -->
            <Button Content="Водитель" Width="150" Height="40" Margin="10" Click="OpenDriverPage"/>

            <!-- Кнопка для открытия страницы транспорта -->
            <Button Content="Транспорт" Width="150" Height="40" Margin="10" Click="OpenTransportPage"/>
        </StackPanel>
    </Grid>
</Window>
